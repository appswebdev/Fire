<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400dp"
    android:minHeight="200dp"
    android:layout_margin="16dp"
    tools:activity=".fragments.AddNewListFragment">

    <android.support.design.widget.TextInputLayout
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/tilListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:hint="Name..." />
    </android.support.design.widget.TextInputLayout>



    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp"
        fancy:fb_borderColor="#90caf9"
        fancy:fb_borderWidth="3dp"
        fancy:fb_defaultColor="#42a5f5"
        fancy:fb_focusColor="#26c6da"
        fancy:fb_fontIconResource="&#xf291;"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="6dp"
        fancy:fb_text="Save the Item"
        fancy:fb_textColor="#FFFFFF"
        android:layout_below="@+id/tilListName"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
