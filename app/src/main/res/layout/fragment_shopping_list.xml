<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:activity=".fragments.ShoppingListFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvShoppingList"
        tools:listitem="@layout/shipping_lists_item"
        />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:onClick="showAddList"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignBottom="@+id/rvShoppingList"
        android:layout_alignRight="@+id/rvShoppingList"
        android:layout_alignEnd="@+id/rvShoppingList"/>
</RelativeLayout>
